<Page
    x:Class="KeepFit.videos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KeepFit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/Green+Abstract+Wallpapers+6.jpg"/>
        </Grid.Background>
        <Popup/>
        <Button x:ConnectionId='1' x:Name="backPg" BorderBrush="Transparent" Content="" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Width="56"                     >
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="Assets/arrowL.png"/>
            </Button.Background>
        </Button>
        <Image HorizontalAlignment="Left" Height="131" Margin="243.956,61.612,0,0" VerticalAlignment="Top" Width="137" Source="Assets/abs.png" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
            <Image.RenderTransform>
                <CompositeTransform Rotation="-9.793"/>
            </Image.RenderTransform>
        </Image>
        <Image HorizontalAlignment="Left" Height="100" Margin="10,230,0,0" VerticalAlignment="Top" Width="100" Source="Assets/Healthy-Breakfast.jpg" Stretch="UniformToFill" Opacity="0.9"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="110,230,0,0" VerticalAlignment="Top" Width="95" Source="Assets/healthy-lunch.jpg" Stretch="UniformToFill" Opacity="0.9"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="302,230,0,0" VerticalAlignment="Top" Width="88" Source="Assets/healthy-snack.jpg" Stretch="UniformToFill" Opacity="0.9"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="205,230,0,0" VerticalAlignment="Top" Width="97" Source="Assets/healthy-dinner.jpg" Stretch="UniformToFill" Opacity="0.9"/>
        <TextBlock HorizontalAlignment="Left" Margin="42,179,0,0" TextWrapping="Wrap" Text="Count Your Calories" VerticalAlignment="Top" Width="260" Height="46" FontSize="24" FontFamily="Lucida Calligraphy">
            <TextBlock.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#FF65D3D3" Offset="1"/>
                    <GradientStop Color="#FF001717" Offset="0.013"/>
                </LinearGradientBrush>
            </TextBlock.Foreground>
        </TextBlock>
        <Button x:ConnectionId='2' x:Name="healthy_breakfast" BorderBrush="Transparent" Content="Breakfast" HorizontalAlignment="Left" Margin="-2,323,0,0" VerticalAlignment="Top" Height="26" Width="84" Foreground="#FF001717"                                />
        <Button x:ConnectionId='3' x:Name="healthy_lunch" BorderBrush="Transparent" Content="Lunch" HorizontalAlignment="Left" Margin="108,323,0,0" VerticalAlignment="Top" Foreground="#FF001717"                            />
        <Button x:ConnectionId='4' x:Name="healthy_dinner" BorderBrush="Transparent" Content="Dinner" HorizontalAlignment="Left" Margin="193,326,0,0" VerticalAlignment="Top" Foreground="#FF001717"                             />
        <Button x:ConnectionId='5' x:Name="healthy_snacks" BorderBrush="Transparent" Content="Snacks" HorizontalAlignment="Left" Margin="293,323,-2,0" VerticalAlignment="Top" Foreground="#FF001717"                             />
        <TextBlock HorizontalAlignment="Left" Margin="10,419,0,0" TextWrapping="Wrap" Text="If you want to eat aorund 1500 calories a day aim to have around 500 calories at each meal. If you like snakcs between meals cut down 100 calories from one of your meals." VerticalAlignment="Top" Height="74" Width="380" FontSize="14" Foreground="#FF001717"/>

    </Grid>
</Page>

