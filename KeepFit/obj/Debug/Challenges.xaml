<Page
    x:Class="KeepFit.Challenges"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KeepFit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Opacity="0.9">
        <Grid.Background>
            <ImageBrush Stretch="UniformToFill" ImageSource="Assets/summerChallenge.jpg"/>
        </Grid.Background>
        <ListView HorizontalAlignment="Left" Height="577" Margin="10,53,0,0" VerticalAlignment="Top" Width="380">
            <Grid HorizontalAlignment="Left" Height="327" Margin="10,83,0,0" VerticalAlignment="Top" Width="380">
                <TextBlock HorizontalAlignment="Left" Margin="20,10,0,0" TextWrapping="Wrap" Text="Food you can restrict yourself to:" VerticalAlignment="Top" FontSize="22" FontFamily="Lucida Calligraphy" Width="341">
                    <TextBlock.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Color="#FFB285B2" Offset="0.967"/>
                            <GradientStop Color="#FF472647" Offset="0.021"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>
                <Image HorizontalAlignment="Left" Height="249" Margin="20,68,0,0" VerticalAlignment="Top" Width="360" Source="Assets/food.jpg"/>
                <HyperlinkButton NavigateUri="https://www.evergreen.ie/diet-detox" Content="" HorizontalAlignment="Left" Margin="31,80,0,0" VerticalAlignment="Top" Height="239" Width="329"/>
            </Grid>



            <Grid Height="610" Width="370">
                <TextBlock HorizontalAlignment="Left" Margin="10,32,0,0" TextWrapping="Wrap" Text="Challenge yourself to have a great BEACH BODY!" VerticalAlignment="Top" Width="329" FontSize="20" FontFamily="Lucida Calligraphy">
                    <TextBlock.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF472647"/>
                            <GradientStop Color="#FFD891D8" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground>
                </TextBlock>
                <Image HorizontalAlignment="Left" Height="217" Margin="22,91,0,0" VerticalAlignment="Top" Width="317" Source="Assets/aMAYzing-Beach-Body-Challenge-1.jpg"/>
                <HyperlinkButton NavigateUri="http://thatprettyfitchick.com/amayzing-beach-body-fitness-challenge" Content="" HorizontalAlignment="Left" Margin="22,88,0,0" VerticalAlignment="Top" Height="224" Width="317"/>
            </Grid>

        </ListView>


        <Button x:ConnectionId='1' x:Name="backPg" BorderBrush="Transparent" Content="" HorizontalAlignment="Left" Margin="-11,0,0,0" VerticalAlignment="Top" Width="56"                     >
            <Button.Background>
                <ImageBrush Stretch="Uniform" ImageSource="Assets/arrowL.png"/>
            </Button.Background>
        </Button>
        <TextBlock HorizontalAlignment="Left" Margin="80,10,0,0" TextWrapping="Wrap" Text="Click on the images for more information!" VerticalAlignment="Top" Height="38" Width="260" FontSize="14" Foreground="#FF1B1A1A"/>

    </Grid>
</Page>

